@model ControlEscolarMVC.Models.AlumnoMateria

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo</h1>

<h4>Alumno - Materia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdAlumnoMateria" class="control-label"></label>
                <input asp-for="IdAlumnoMateria" class="form-control" />
                <span asp-validation-for="IdAlumnoMateria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMateria" class="control-label"></label>
                <select asp-for="IdMateria" class ="form-control" asp-items="ViewBag.Nombre"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdAlumno" class="control-label"></label>
                <select asp-for="IdAlumno" class ="form-control" asp-items="ViewBag.Nombre"></select>
            </div>
            <div class="form-group">
                <label asp-for="Progreso" class="control-label"></label>
                <input asp-for="Progreso" class="form-control" />
                <span asp-validation-for="Progreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion" class="control-label"></label>
                <input asp-for="Calificacion" class="form-control" />
                <span asp-validation-for="Calificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estatus" class="control-label"></label>
                <select asp-for="Estatus" class="form-control" >
                    <option value="1">Activo</option>
                    <option value="o">Inactivo</option>
                </select>
                <span asp-validation-for="Estatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label"></label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-warning" asp-action="Index">&nbsp;Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
