@model ControlEscolarMVC.Models.Materia

@{
    ViewData["Title"] = "Create";
}

<h1>Naeva</h1>

<h4>Materia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdMateria" class="control-label"></label>
                <input asp-for="IdMateria" class="form-control" />
                <span asp-validation-for="IdMateria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveMateria" class="control-label"></label>
                <input asp-for="ClaveMateria" class="form-control" />
                <span asp-validation-for="ClaveMateria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProfesor" class="control-label"></label>
                <select asp-for="IdProfesor" class ="form-control" asp-items="ViewBag.IdProfesor"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdProgramaEstudio" class="control-label"></label>
                <select asp-for="IdProgramaEstudio" class ="form-control" asp-items="ViewBag.IdProgramaEstudio"></select>
            </div>
           
            <input asp-for="Estatus" type="hidden" class="form-control" value="1" />
           
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label"></label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-warning" asp-action="Index">&nbsp;Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
